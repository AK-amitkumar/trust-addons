<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
        <template id="assets_frontend" inherit_id="website.assets_frontend" name="Shop BR Zip">
          <xpath expr="." position="inside">
              <script type="text/javascript" src="/l10n_br_website_sale_zip/static/src/js/website_sale.js"></script>
          </xpath>
        </template>

		<template id="l10n_br_website_sale_zip_checkout" inherit_id="website_sale.checkout"
			name="Website Sale Checkout BR ZIP">

			<xpath expr="//div[@class='col-md-8 oe_cart']/div[1]/div[9]" position="replace">
			</xpath>

            <xpath expr="//div[@class='col-md-8 oe_cart']/div[1]/div[7]" position="after">
				<div class="form-group col-lg-1" style="height:48px;">
					<a id="btn_search_zip" href="javascript:void();" class="btn btn-primary" style="margin-top:12px;">
						<span class="fa fa-search" />
					</a>
				</div>
            </xpath>

		</template>
    </data>
</openerp>
