<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="sale_order_cancel_partial_view" model="ir.ui.view">
            <field name="name">sale.order.cancel.partial.view</field>
            <field name="model">sale.advance.payment.inv</field>
            <field name="inherit_id" ref="sale.view_sale_advance_payment_inv" />
            <field name="arch" type="xml">
                <field name="advance_payment_method" position="after">
                    <field name="sale_order_line_id" string="Produtos"  attrs="{'invisible': [('advance_payment_method', '!=', 'lines')]}">
                        <tree  editable="bottom">
                            <field name="name" />
                            <field name="quantidade" />
                            <field name="subtotal" />
                            <field name="a_faturar"/>
                            <field name="sale_order_line_id" />
                        </tree>
                    </field>
                </field>
                <button name="create_invoices" position="replace">
                    <button string="Faturar Quantias" name="faturar_parcial" type="object" class="oe_highlight" attrs="{'invisible': [('advance_payment_method', '!=', 'lines')]}" />
                </button>
                <label string="After clicking 'Show Lines to Invoice', select lines to invoice and create the invoice from the 'More' dropdown menu." position="attributes">
                    <attribute name="invisible">1</attribute>
                </label>
                <button name="create_invoices" position="attributes">
                    <attribute name="attrs">{'invisible': [('advance_payment_method', '=', 'lines')]}</attribute>
                </button>
            </field>
        </record>

        <record id="sale_order_partial_invoice_view" model="ir.ui.view">
            <field name="name">sale.order.partial.invoice.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <button name="action_view_invoice" position="after">
                    <button string="Ver Faturas Parciais" name="action_view_parcial_invoice" type="object" class="oe_highlight" />
                </button>
            </field>
        </record>

    </data>
</openerp>
