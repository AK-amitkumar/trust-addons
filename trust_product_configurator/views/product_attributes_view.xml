<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<record id="view_material_attributes_tree" model="ir.ui.view">
			<field name="name">material.attributes.tree</field>
			<field name="model">material.attributes</field>
			<field name="arch" type="xml">
				<tree string="Product Attributes">
					<field name="active" />
					<field name="name" />					
				</tree>
			</field>
		</record>

		<record id="view_material_attributes_form" model="ir.ui.view">
			<field name="name">material.attributes.form</field>
			<field name="model">material.attributes</field>
			<field name="arch" type="xml">
				<form string="Product Attributes">
					<group>
						<field name="name" />
						<field name="active" />
					</group>										
				</form>
			</field>
		</record>
		

		<record id="view_product_configurator_product_template_form"
			model="ir.ui.view">
			<field name="name">product_configurator.product.template</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view" />
			<field name="arch" type="xml">
				<div name="options" position="inside">
                    <div>
                        <field name="configurator_template"/>
                        <label for="configurator_template"/>
                    </div>
                </div>				
				<xpath expr="//page[@string='Sales']" position="after">
					<page name="configurator_attributes" string="Configurator Attributes" attrs="{'invisible': [('configurator_template', '=', False)] }">
						<field name="material_attribute_ids" widget="one2many_list"
							context="{'show_attribute': False}">
							<tree string="Configurator Attributes" editable="bottom">
                                <field name="attribute_id"/>
                                <field name="value_ids" widget="many2many_tags" options="{'no_create_edit': True}" domain="[('attribute_id', '=', attribute_id)]" context="{'default_attribute_id': attribute_id}"/>
                            </tree>
						</field>
					</page>
				</xpath>
			</field>
		</record>

	</data>
</openerp>

