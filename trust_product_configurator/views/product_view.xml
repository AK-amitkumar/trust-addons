<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="view_product_configurator_product_template_form"
			model="ir.ui.view">
			<field name="name">product_configurator.product.template</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//page[@string='Sales']" position="after">
					<page name="variants" string="Configurator Attributes">
						<field name="material_attribute_ids" widget="one2many_list"
							context="{'show_attribute': False}">
						</field>
					</page>
				</xpath>
			</field>
		</record>

	</data>
</openerp>

